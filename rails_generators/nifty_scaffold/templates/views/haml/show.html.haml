#<%= singular_name %>
  #show
    - title "<%= singular_name.titleize %>"

    <%- for attribute in attributes -%>
    %p
      %strong <%= attribute.column.human_name.titleize %>:
      =h @<%= singular_name %>.<%= attribute.name %>
    <%- end -%>

    %p
      <%- if action? :edit -%>
      = link_to "Edit", edit_<%= singular_path %>_path(@<%= singular_name %>)
      |
      <%- end -%>
      <%- if action? :destroy -%>
      = link_to "Destroy", <%= form_path %>, :confirm => 'Are you sure?', :method => :delete
      |
      <%- end -%>
      <%- if action? :index -%>
      = link_to "View All", <%= plural_path %>_path
      <%- end -%>

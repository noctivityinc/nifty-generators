#<%= singular_name %>
  #index
    - title "Edit <%= singular_name.titleize %>"

    <%= render_form %>

    <%- if actions? :show, :index -%>
    %p
      <%- if action? :show -%>
      = link_to "Show", <%= singular_path %>_path(@<%= singular_name %>)
      |
      <%- end -%>
      <%- if action? :index -%>
      = link_to "View All", <%= plural_path %>_path
      <%- end -%>
    <%- end -%>
